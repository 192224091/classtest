#include <stdio.h>

void swap(int *x, int *y) {
    int temp = *x;
    *x = *y;
    *y = temp;
}

void sort_descending(int arr[], int size) {
    int i, j;

    for (i = 0; i < size-1; i++) {
        for (j = i+1; j < size; j++) {
            if (arr[i] < arr[j]) {
                swap(&arr[i], &arr[j]);
            }
        }
    }
}

int main() {
    int arr[] = {10, 56, 78, 34, 51, 23, 79, 44, 36, 55, 98};
    int size = sizeof(arr)/sizeof(arr[0]);
    int i;

    printf("Before sorting: ");
    for (i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    sort_descending(arr, size);

    printf("\nAfter sorting in descending order: ");
    for (i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
